<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dawnmobile.chroniclesoft" xmlns="http://www.w3.org/ns/widgets" version="1.0.0">

    <name>DawnMobile</name>
    <description>
        Disciple A Whole Nation Mobile App is designed to fully automate the process of convert follow-up and discipleship.
    </description>
    <author email="" href="">
        Chroniclesoft Team
    </author>

    <engine name="android" spec="11.0.0" />
    <!-- <preference name="phonegap-version" value="cli-7.1.0" /> -->
    <preference name="orientation" value="portrait" /> 
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" /> 
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
	<preference name="SplashScreenDelay" value="8000" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="21" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-build-tool" value="gradle" />

    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/dawn2.png" />
    <preference name="AndroidWindowSplashScreenBackground" value="#F3DBFF" />

	<preference name="AndroidPersistentFileLocation" value="Compatibility" />

    <!-- <preference name='pgb-builder-version' value='1' /> -->

